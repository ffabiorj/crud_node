<form action="/controllerupdate" method="post">
    <div class="form-group invisible">
        <input type="text" class="form-control" name="id" value="{{id}}">
    </div>
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" name="name" value="{{name}}" placeholder="Nome">
    </div>
    <div class="form-group">
        <label for="">Idade</label>
        <input type="text" class="form-control" name="age" value="{{age}}" placeholder="Idade">
    </div>
    <button type="submit" class="btn btn-primary" value="add">Atualizar</button>
</form>